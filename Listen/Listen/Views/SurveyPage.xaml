<?xml version="1.0" encoding="UTF-8"?>
<lvisual:BaseContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:visual="clr-namespace:PopolLib.VisualElements.FastListView;assembly=PopolLib"
    xmlns:lvisual="clr-namespace:Listen.VisualElements;assembly=Listen"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Listen.Views.SurveyPage">
    <ContentPage.Content>
        <StackLayout Padding="0,0,0,200" BackgroundColor="{StaticResource white}">
            <visual:FastListView BackgroundColor="{StaticResource white}" ItemsSource="{Binding Surveys}" ScrollEnabled="true" HasUnevenRows="true" SelectedCommand="{Binding SelectedCommand}" SeparatorVisibility="None" />
        </StackLayout>
    </ContentPage.Content>
</lvisual:BaseContentPage>